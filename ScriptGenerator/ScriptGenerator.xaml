<Window x:Class="ScriptGenerator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ScriptGenerator"
        mc:Ignorable="d"
        Title="SciptGenerator" Height="495.6" Width="720">
    <Grid Margin="0,0,3.6,0.4">
        <TextBox Name="InputFilePath"  HorizontalAlignment="Left" Height="23" Margin="117,25,0,0" TextWrapping="Wrap" Text="Input file path" VerticalAlignment="Top" Width="462"/>
        <Label Content="Input File : " HorizontalAlignment="Left" Margin="35,22,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.418,-2.203" Height="26" Width="82"/>
        <Button Name="GenerateScript_Btn" Content="Generate Script" HorizontalAlignment="Left" Margin="295,427,0,0" VerticalAlignment="Top" Width="137" Click="GenerateScript_Click"/>
        <Button Name="BrowseInput_Btn"  Content="Browse" HorizontalAlignment="Left" Margin="599,25,0,0" VerticalAlignment="Top" Width="75" Click="BrowseInput_Click"/>
        <Rectangle Fill="#FFF4F4F5" HorizontalAlignment="Left" Height="294" Stroke="Black" VerticalAlignment="Top" Width="639" Margin="35,109,0,0"/>
        <Label Content="Output Result : " HorizontalAlignment="Left" Margin="35,77,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.418,-2.203" Height="26" Width="104"/>
        <ScrollViewer HorizontalAlignment="Left" Height="294" Margin="35,109,0,0" VerticalAlignment="Top" Width="639" VerticalScrollBarVisibility="Auto" >
            <TextBlock Name="OutputResult" Margin="10 0 30 0" TextWrapping="Wrap" Text=""/>
        </ScrollViewer>
        <TextBox x:Name="TemplateFilePath"  HorizontalAlignment="Left" Height="23" Margin="117,49,0,0" TextWrapping="Wrap" Text="Template file path" VerticalAlignment="Top" Width="462"/>
        <Label Content="Template : " HorizontalAlignment="Left" Margin="35,46,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.418,-2.203" Height="26" Width="82"/>
        <Button x:Name="BrowseTemplate_Btn"  Content="Browse" HorizontalAlignment="Left" Margin="599,49,0,0" VerticalAlignment="Top" Width="75" Click="BrowseTemplate_Click"/>
    </Grid>
</Window>
